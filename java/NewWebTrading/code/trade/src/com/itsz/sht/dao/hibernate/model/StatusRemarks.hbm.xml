<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="com.itsz.sht.dao.hibernate.model.StatusRemarks"
		table="SERVICE_REMARK">
		<composite-id name="id"
			class="com.itsz.sht.dao.hibernate.model.StatusRemarksPK">
			<key-property name="serviceID" column="service_id"/>
			<key-property name="status" column="status"/>
			<key-property name="lang" column="lang"/>
		</composite-id>
		<property name="remarks"
			type="com.taifook.mtss.web.common.util.hibernate.StringClobType">
			<column name="remarks"/>
		</property>
		<property name="updateSeqNum">
			<column name="upd_seq_num" sql-type="number(18)"/>
		</property>
		<property name="lastModifiedDate">
			<column name="last_modified" sql-type="timestamp(6)"/>
		</property>
		<property name="updateToken">
			<column name="upd_token" sql-type="varchar2(50)"/>
		</property>
	</class>
</hibernate-mapping>